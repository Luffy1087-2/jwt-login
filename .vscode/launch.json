{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Test",
      "runtimeArgs": [
        "--loader",
        "ts-node/esm"
      ],
      "args": [
        "${relativeFile}"
      ],
      "env": {
        "NODE_ENV": "test"
      },
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    }
  ]
}